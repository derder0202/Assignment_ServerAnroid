    <div class="row">
        <% for (var i = 0; i < data.length ; i++) { %>
        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
            <div class="card h-100">
                <a href="#"><img class="card-img-top" src="<%=data[i].url%>" alt=""></a>
                <div class="card-body">
                    <h4 class="card-title">
                        <a href="#"><%=data[i].title%></a>
                    </h4>
                    <p class="card-text"><%=data[i].description%></p>
                    <a href="/listImage/delete/<%=data[i]._id%>" class="btn btn-primary btn-user btn-block flex-wrap">
                        Xóa
                    </a>
                    <a href="/listImage/updatePage/<%=data[i]._id%>" class="btn btn-primary btn-user btn-block flex-wrap">
                        Sửa
                    </a>
                </div>

            </div>

        </div>
        <% } %>
    </div>
<!--    </ul>-->
